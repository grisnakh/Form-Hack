{
  "name": "Hack the Form",
  "description": "A usefull add-on for web developers to view hidden inputs in form.",
  "version": "0.2",
  "permissions": [
    "activeTab",
    "tabs"
  ],

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "background": {
    "scripts": ["main.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Show hidden inputs"
  },
  "manifest_version": 2
}